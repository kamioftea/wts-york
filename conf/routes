# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /status                     controllers.Application.status
GET     /status/edit                controllers.Application.editStatus
POST    /status/terror              controllers.Application.updateTerror
POST    /status/pr                  controllers.Application.updatePr
POST    /status/reset               controllers.Application.reset

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
